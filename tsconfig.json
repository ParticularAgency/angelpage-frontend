{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@styles": [
        "./src/styles/*"
      ],
      "@elements/*": [
        "./src/components/elements/*"
      ],
      "@common/*": [
        "./src/components/common/*"
      ],
      "@data/*": [
        "./src/data/*"
      ],
      "@images/*": [
        "./public/images/*"
      ],
      "@packages/*": [
        "./src/libs/*"
      ],
      "@icons/*": [
        "./src/icons/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/utils/realtimeMessaging.js",
     "src/types/next-auth.d.ts"
, "next.config.mjs", "src/components/product/ProductSingleSec.jsx"  ],
  "exclude": [
    "node_modules"
  ]
} 